<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@drawable/back"
    tools:context=".CharacterActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"/>

                <ImageView
                    android:layout_width="26dp"
                    android:layout_height="30dp"
                    android:src="@drawable/elixir_bottle"/>

                <TextView
                    android:id="@+id/elixir"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_gravity="right"/>
            </LinearLayout>

            <GridLayout
                android:id="@+id/characterGrid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:columnCount="2">
                <ImageView
                    android:id="@+id/character_image1"
                    android:tag="0"
                    android:onClick="Check"
                    android:layout_margin="5dp"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:adjustViewBounds="true"/>
                <ImageView
                    android:id="@+id/character_image2"
                    android:tag="1"
                    android:onClick="Check"
                    android:layout_margin="5dp"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:adjustViewBounds="true"/>
                <ImageView
                    android:id="@+id/character_image3"
                    android:tag="2"
                    android:onClick="Check"
                    android:layout_margin="5dp"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:adjustViewBounds="true"/>
                <ImageView
                    android:id="@+id/character_image4"
                    android:tag="3"
                    android:onClick="Check"
                    android:layout_margin="5dp"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:adjustViewBounds="true"/>
            </GridLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>